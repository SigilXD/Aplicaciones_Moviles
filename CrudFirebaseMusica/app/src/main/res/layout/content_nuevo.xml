<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NuevoActivity"
    tools:showIn="@layout/activity_nuevo">


    <EditText
        android:id="@+id/et_nuevo_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/light"
        android:textColorHint="@android:color/white"
        android:hint="Genero Musical"
        android:inputType="text"
        android:textColorHighlight="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_nuevo_nombre"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/et_nuevo_nombre"
        app:layout_constraintTop_toBottomOf="@+id/et_nuevo_nombre" />

    <EditText
        android:id="@+id/et_nuevo_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:fontFamily="@font/light"
        android:textColorHint="@android:color/white"
        android:hint="Nombre de la agrupaciÃ³n"
        android:inputType="textPersonName"
        android:textColorHighlight="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="423dp"
        android:layout_height="259dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
